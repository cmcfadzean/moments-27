<%= render(NavComponent.new()) do %>
  <%= link_to 'ðŸ“… New Moment', new_moment_path %>
<% end %>
<%= render(ContainerComponent.new()) do %>
  <% if @upcoming_moments.blank? && @past_moments.blank?%>
    <%= image_tag "null.svg" %>
  <% else %>
    <%= render(TabsComponent.new()) do |component| %>
      <% component.with(:tab_one) do %>
        <% @upcoming_moments.each do |moment| %>
          <%= render(MomentComponent.new(title: moment.title, date: moment.date, link: edit_moment_path(moment), description: moment.description)) %>
        <% end %>
      <% end %>
      <% component.with(:tab_two) do %>
        <% @past_moments.each do |moment| %>
          <%= render(MomentComponent.new(title: moment.title, date: moment.date, link: edit_moment_path(moment), description: moment.description)) %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
