<%= render(ContainerComponent.new()) do %>
  <% if @moments.blank? %>
    <%= image_tag "null.svg" %>
  <% else %>
    <% @moments.each do |moment| %>
      <%= render(MomentComponent.new(title: moment.title, date: ( moment.date - Date.today() ).to_i, link: edit_moment_path(moment), description: moment.description)) %>
    <% end %>
  <% end %>
<% end %>
